@model EY_ManagmentExercise.Models.ViewModels.CreateNewDepartmentViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "Departments", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new department.</h4>
    if (Model != null && Model.OutputMsg != null)
    {
        <div class="alert alert-warning">
            <strong> Pay Attention! </strong> @Model.OutputMsg
        </div>
    }
    <hr />
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(model => model.Department.Department_id, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(model => model.Department.Department_id, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Department.Name, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(model => model.Department.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Department.Description, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(model => model.Department.Description, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Department.IsActive, new { @class = "col-md-2 control-label" })
        @Html.CheckBoxFor(model => model.Department.IsActive, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Department.CreatedBy, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(model => model.Department.CreatedBy, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-secondary" value="Register" />
        </div>
    </div>
}


<div>
    @Html.ActionLink("Back to List", "Index")
</div>
