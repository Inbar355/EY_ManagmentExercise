@model EY_ManagmentExercise.Models.ViewModels.CreateNewEmployeeViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create new Employee</h2>

@using (Html.BeginForm("Create", "Employees", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @if (Model != null && Model.OutputMsg != null)
        {
            <div class="alert alert-warning">
                <strong> @Model.OutputMsg </strong>
            </div>
        }
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Employee.ID, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Employee.ID, new { htmlAttributes = new { @class = "form-control", onchange = "validateId(this)" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Employee.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Employee.FirstName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Employee.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Employee.LastName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Employee.BirthDate, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Employee.BirthDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Employee.StartWorkingDay, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Employee.StartWorkingDay, new { htmlAttributes = new { @class = "form-control", type = "date" } })
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CurrentDepartmentId, new { style = "display: none;" })
            @Html.TextBoxFor(model => model.CurrentDepartmentId, new { style = "display: none;" })
        </div>
    </div>
}

<script src="~/Scripts/emploee.js" type="text/javascript"></script>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>